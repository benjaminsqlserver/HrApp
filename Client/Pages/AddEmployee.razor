@page "/add-employee"
@attribute [Authorize]

<PageTitle>Add Employee</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Employee</RadzenAlert>
        <RadzenTemplateForm TItem="HrApp.Server.Models.HrDB.Employee" Data="@employee" Visible="@(employee != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="firstname" Component="first_name" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@employee.first_name" Name="first_name" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="lastname" Component="last_name" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@employee.last_name" Name="last_name" />
                    <RadzenRequiredValidator Component="last_name" Text="last_name is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="email" Component="email" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@employee.email" Name="email" />
                    <RadzenRequiredValidator Component="email" Text="email is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="phonenumber" Component="phone_number" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@employee.phone_number" Name="phone_number" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="hiredate" Component="hire_date" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="dd/MM/yyyy" style="display: block; width: 100%" @bind-Value="@employee.hire_date" Name="hire_date" />
                    <RadzenRequiredValidator Component="hire_date" Text="hire_date is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="salary" Component="salary" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@employee.salary" Name="salary" />
                    <RadzenRequiredValidator Component="salary" Text="salary is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Department" Component="Department" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@departmentsFordepartmentId" TextProperty="department_name" ValueProperty="department_id" AllowClear=true
                         Placeholder="Choose Department" style="display: block; width: 100%" @bind-Value="@employee.department_id" Name="department_id"
                        SelectedValue=@departmentsFordepartmentIdValue Count=@departmentsFordepartmentIdCount LoadData=@departmentsFordepartmentIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Job" Component="Job" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@jobsForjobId" TextProperty="job_title" ValueProperty="job_id" AllowClear=true
                         Placeholder="Choose Job" style="display: block; width: 100%" @bind-Value="@employee.job_id" Name="job_id"
                        SelectedValue=@jobsForjobIdValue Count=@jobsForjobIdCount LoadData=@jobsForjobIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Employee1" Component="Employee1" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@employeesFormanagerId" TextProperty="first_name" ValueProperty="employee_id" AllowClear=true
                         Placeholder="Choose Employee1" style="display: block; width: 100%" @bind-Value="@employee.manager_id" Name="manager_id"
                        SelectedValue=@employeesFormanagerIdValue Count=@employeesFormanagerIdCount LoadData=@employeesFormanagerIdLoadData />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

